<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>log4j</param-name>
        <param-value>WEB-INF/classes/log4j.properties</param-value>
    </context-param>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.abyss.web.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <!--<servlet-name>Login</servlet-name>-->
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.abyss.web.MyServletRequestListener</listener-class>
    </listener>

    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>

    <!--登录-->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.abyss.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.htm</url-pattern>
    </servlet-mapping>
    <!--注册-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.abyss.web.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register.htm</url-pattern>
    </servlet-mapping>
    <!--登录成功-->
    <servlet>
        <servlet-name>LoginSuccessPage</servlet-name>
        <servlet-class>com.abyss.web.LoginSuccessPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginSuccessPage</servlet-name>
        <url-pattern>/loginSuccess.html</url-pattern>
    </servlet-mapping>
    <!--图片下载-->
    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>com.abyss.web.ImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/imageServlet.html</url-pattern>
    </servlet-mapping>
    <!--动态的登录页面-->
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <servlet-class>com.abyss.web.LoginPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/loginPage</url-pattern>
    </servlet-mapping>
    <!--验证码生成-->
    <servlet>
        <servlet-name>CheckCode</servlet-name>
        <servlet-class>com.abyss.web.CheckCode</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CheckCode</servlet-name>
        <url-pattern>/checkCode</url-pattern>
    </servlet-mapping>
    <absolute-ordering/>
</web-app>